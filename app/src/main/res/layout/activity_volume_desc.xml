<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VolumeDescriptionActivity">

        <LinearLayout
            android:id="@+id/description_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#787bb0">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_item_book_thumbnail"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_book_image_placeholder"
                android:background="@color/black"
                android:scaleType="fitXY"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_item_book_title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="15dp"
                style="@style/volume_desc_text_view"
                android:textSize="24sp"
                android:textColor="@color/white"
                tools:text="Book Title"
                android:textStyle="bold"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/volume_desc_text_view"
                android:text="@string/by"
                android:textColor="#bdc0f2"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_item_book_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/volume_desc_text_view"
                android:textColor="@color/white"
                tools:text="Author Name"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_item_book_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/volume_desc_text_view"
                android:textColor="#bdc0f2"
                tools:text="Mai theek hu or aage se aise text nhi use krne" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_item_book_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/volume_desc_text_view"
                android:textColor="@color/white"
                tools:text="hello how are you ?khana kha ke jana. ok?" />

        </LinearLayout>

    </ScrollView>
